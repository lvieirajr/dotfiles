[user]
	name = Luis Vieira
	email = lvieira@lvieira.com
	username = lvieirajr
	signingkey = <SSH_KEY>

[core]
	attributesfile = ~/.gitattributes
	editor = vim
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
	trustctime = false
	untrackedCache = true
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[gpg]
	format = ssh

[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[apply]
	whitespace = fix

[branch]
	sort = -committerdate

[commit]
	gpgsign = true

[diff]
	renames = copies
	tool = vimdiff

[diff "bin"]
	texconv = hexdump -v -C

[difftool]
	prompt = false

[fetch]
    all = true
    prune = true

[help]
	autocorrect = 1

[init]
	defaultBranch = main

[merge]
	log = true

[pull]
	rebase = true

[push]
	autoSetupRemote = true
	default = simple
	followTags = true
